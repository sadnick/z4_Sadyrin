<Window x:Class="z4_Sadyrin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:z4_Sadyrin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Background="#FF00D9BB"></Grid>
        <!--<Image Source="\Resources\logoEsoft.png" HorizontalAlignment="Left"></Image>-->
        <TextBlock Text="Esoft" FontFamily="Calibri" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Button Content="Назад" FontFamily="Calibri" Name="btnBack" Click="btnBack_Click" HorizontalAlignment="Right"  Width="175" Height="30" Margin="5"></Button>
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Grid.Row="1" Name="MainFrame"></Frame>

    </Grid>
</Window>
