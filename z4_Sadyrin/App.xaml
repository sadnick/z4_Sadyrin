        </Style>
        <!--Style for lastNTxtb TextBlok-->
        <Style TargetType="TextBlock" x:Key="lastMTxtb">
            <Setter Property="Width" Value="250"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="350 0 0 -90"/>
        </Style>


        <!--Style for nodefault redactBtn-->
        <Style TargetType="Button" x:Key="redactBtn">
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#00d9bb"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0 0 0 -170"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <!--Style for default Button-->
        <Style TargetType="Button" x:Key="DeleteBtn">
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#00d9bb"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="250 0 0 -170"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>

        </Style>
    </Application.Resources>
</Application>
